.container {
  background-color: #F2f2f2;
}

.head{
  display: flex;
  height: 47px;
  align-content: center;
  background-color: #fff;
  align-items: center;
}

.head .logo{
  height: 34px;
  width: 168px;
  float: left;
}

.head .btn-area{
  display: flex;
  flex-direction: row;
  float: right;
  align-items:center;
  height: 100%;
}

view.section {
  /*display: block;*/
  /*width: 100%;*/
